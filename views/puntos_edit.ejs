<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link href="styles.css" rel="stylesheet">
    <title>CRUD</title>
</head>
<body>

                    <form action="/updatep" method="POST">

                      <div><img srcset="images/puntos.png" alt=""></div> 

                      <img src="images/puntos.png" alt="Qatar22" />
                      
                      <picture>
                        <source srcset="images/puntos.png" media="(min-width: 600px)">
                        <img src="../images/Z_Quiniela.png" alt="MDN">
                       </picture>

                      <input id="Id" name="Id" value="<%= user.Id %>" hidden>

                        <div class="mb-3">
                          <label for="Local" class="form-label">Local</label>
                          <a class="nav-link" aria-current="page" ><%= user.Local  %></a>                        
                        </div>   


                        <div class="mb-3">
                          <label for="ML" class="form-label">ML</label>
                          <input type="number" class="form-control" id="ML" name="ML" tabindex="1" value="<%= user.ML  %>" min="0" pattern="^[0-9]+">                        
                        </div>


                        

 	<button type="button" class="btn btn-secondary" onclick="sumaL();">		  
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-plus" viewBox="0 0 16 16">
      <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z"></path>
      <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"></path>
    </svg>
      </button>
    
      
     
     <button type="button" class="btn btn-secondary" onclick="restaL();">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-minus" viewBox="0 0 16 16">
      <path d="M5.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z"></path>
      <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z"></path>
    </svg>
     </button>
     
     
                        <div class="mb-3">
                          <label for="MV" class="form-label">MV</label>
                          <input type="number" class="form-control" id="MV" name="MV" tabindex="1" value="<%= user.MV  %>" min="0" pattern="^[0-9]+">                        
                        </div>

                        <div class="mb-3">
                          <label for="Visitante" class="form-label">Visitante</label>
                          <a class="nav-link" aria-current="page" ><%= user.Visitante  %></a>                        
                        </div>   

                        
  
  <button type="button" class="btn btn-secondary" onclick="sumaV();">	
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-up-square" viewBox="0 0 16 16">
<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"></path>
<path d="M3.544 10.705A.5.5 0 0 0 4 11h8a.5.5 0 0 0 .374-.832l-4-4.5a.5.5 0 0 0-.748 0l-4 4.5a.5.5 0 0 0-.082.537z"></path>
</svg>
  </button>


<button type="button" class="btn btn-secondary" onclick="restaV();">	
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down-square" viewBox="0 0 16 16">
<path d="M3.626 6.832A.5.5 0 0 1 4 6h8a.5.5 0 0 1 .374.832l-4 4.5a.5.5 0 0 1-.748 0l-4-4.5z"></path>
<path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm15 0a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2z"></path>
</svg>
</button>



                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/partidos" class="btn btn-secondary">Cancelar</a>


  
                        <button type="button" class="btn btn-secondary" onclick="getRndInteger();">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down-square-fill" viewBox="0 0 16 16">
                              <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4 4a.5.5 0 0 0-.374.832l4 4.5a.5.5 0 0 0 .748 0l4-4.5A.5.5 0 0 0 12 6H4z"></path>
                          </svg>                         
                        </button>


                    </form>
                </div>
            </div>     
      </div>
      <% } %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>



      <script>
        function sumaL()
        {
            res = document.getElementById("ML");
            res.value = parseInt(res.value)+1;
        }
        
        function restaL()
        {
            res = document.getElementById("ML");
            res.value = Math.abs(parseInt(res.value)-1);
        }
        
        
        function sumaV()
        {
            res = document.getElementById("MV");
            res.value = parseInt(res.value)+1;
        }
        
        function restaV()
        {
            res = document.getElementById("MV");
            res.value = Math.abs(parseInt(res.value)-1);
        }
        
        
        function getRndInteger() {
        
        var min = 0
        var max = 2
        var minV = 1
        var maxV = 4
        
        
           res = document.getElementById("ML");
           res.value = Math.floor(Math.random() * (max - min + 1) ) + min;
        
           res = document.getElementById("MV");
           res.value = Math.floor(Math.random() * (maxV - minV + 1) ) + minV;
        }
        
        </script>
        
    </body>
</html>